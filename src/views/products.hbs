    .aspect-ratio-box {
        position: relative;
        overflow: hidden;
        padding-top: 100%;
    }
    .aspect-ratio-box-inside {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
</style>